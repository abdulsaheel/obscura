{
  "name": "@obscura/circuits",
  "version": "1.0.0",
  "description": "ZK-SNARK circuits for private transfers",
  "main": "index.js",
  "scripts": {
    "compile": "/usr/local/bin/circom private-transfer.circom --r1cs --wasm --sym --output .",
    "test": "mocha test.js --timeout 30000",
    "setup:powers": "../node_modules/.bin/snarkjs powersoftau new bn128 16 pot16_0000.ptau -v && ../node_modules/.bin/snarkjs powersoftau contribute pot16_0000.ptau pot16_0001.ptau --name='First contribution' -v && ../node_modules/.bin/snarkjs powersoftau prepare phase2 pot16_0001.ptau pot16_final.ptau -v",
    "setup:ceremony": "../node_modules/.bin/snarkjs groth16 setup private-transfer.r1cs pot16_final.ptau private-transfer_0000.zkey",
    "setup:contribute": "../node_modules/.bin/snarkjs zkey contribute private-transfer_0000.zkey private-transfer_0001.zkey --name='First contribution' -v",
    "setup:finalize": "../node_modules/.bin/snarkjs zkey beacon private-transfer_0001.zkey private-transfer_final.zkey 0102030405060708090a0b0c0d0e0f101112131415161718191a1b1c1d1e1f 10 -n='Final Beacon'",
    "generate-verifier": "../node_modules/.bin/snarkjs zkey export solidityverifier private-transfer_final.zkey ../contracts/contracts/Verifier.sol",
    "verify-setup": "../node_modules/.bin/snarkjs zkey verify private-transfer.r1cs pot16_final.ptau private-transfer_final.zkey",
    "build-all": "npm run compile && npm run setup:ceremony && npm run setup:contribute && npm run setup:finalize && npm run generate-verifier"
  },
  "dependencies": {
    "chai": "^4.5.0",
    "circom_tester": "^0.0.24",
    "circomlib": "^2.0.5",
    "circomlibjs": "^0.1.7",
    "mocha": "^11.7.4",
    "snarkjs": "^0.7.0"
  }
}
