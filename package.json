{
  "name": "obscura-private-transfers",
  "version": "1.0.0",
  "description": "Private transfer system using ZK-SNARKs",
  "private": true,
  "workspaces": [
    "circuits",
    "contracts",
    "frontend",
    "relayer",
    "indexer"
  ],
  "scripts": {
    "setup": "./scripts/setup.sh",
    "generate-verifier": "cd circuits && npm run generate-verifier",
    "test": "npm run test --workspaces",
    "build:all": "npm run build --workspaces",
    "clean": "npm run clean --workspaces",
    "setup:powers": "cd circuits && npm run setup:powers",
    "setup:ceremony": "cd circuits && npm run setup:ceremony",
    "setup:phase2": "cd circuits && npm run setup:phase2",
    "deploy:sepolia": "cd contracts && npm run deploy:sepolia",
    "deploy:base-sepolia": "cd contracts && npm run deploy:base-sepolia",
    "verify:sepolia": "cd contracts && npm run verify:sepolia",
    "start:frontend": "cd frontend && npm start",
    "start:relayer": "cd relayer && npm start"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/obscura-private-transfers.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/obscura-private-transfers/issues"
  },
  "homepage": "https://github.com/your-username/obscura-private-transfers#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "circomlib": "^2.0.5",
    "ffjavascript": "^0.3.1",
    "poseidon-js": "^0.1.3",
    "poseidon-lite": "^0.3.0",
    "snarkjs": "^0.7.5"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@openzeppelin/contracts": "^5.4.0",
    "dotenv": "^17.2.3",
    "hardhat": "^2.26.3"
  }
}
